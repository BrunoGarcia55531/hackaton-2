{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "include": ["src/**/*"],
  "exclude": ["build"],
  "compilerOptions": {
  "target": "ES2018",
  "module": "ES6",
  "rootDir": "./src",
  "outDir": "./src",
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true
}
}